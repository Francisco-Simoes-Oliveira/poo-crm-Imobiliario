<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" stylesheets="@/css/clienteStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ImovelController">
    <top>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Título e botão-->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label styleClass="section-title" text="Imoveis">
                    <font>
                        <Font name="Arial Black" size="15.0" />
                    </font></Label>
                <Pane maxWidth="100.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="comboFiltro" prefHeight="25.0" prefWidth="85.0" promptText="Filtro">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Logradouro" />
                            <String fx:value="CEP" />
                            <String fx:value="Email" />
                            <String fx:value="Telefone" />
                            <String fx:value="Status" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <TextField fx:id="campoPesquisa" prefHeight="35.0" prefWidth="185.0" promptText="Pesquisar cliente...">
                        <font>
                            <Font size="14.0" />
                        </font></TextField>
                </HBox>
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#abrirNovoImovelModal" styleClass="primary-button" text="➕ Novo Imovel" />
            </HBox>

            <!-- Tabela de Clientes-->
            <TableView fx:id="tabelaImovels" prefHeight="400" prefWidth="800.0">
                <columns>
                    <TableColumn fx:id="colunaId" prefWidth="83.0" text="Id" />
                    <TableColumn fx:id="colunaLogradoro" prefWidth="316.0" text="Logradoro" />
                    <TableColumn fx:id="colunaStatus" prefWidth="144.0" text="Status" />
               <TableColumn fx:id="colunaImg" prefWidth="84.0" text="Imagens" />
               <TableColumn fx:id="colunaInfo" prefWidth="85.0" text="Info" />
                    <TableColumn fx:id="colunaAcoes" prefWidth="87.0" text="Ações" />
                </columns>
            </TableView>
        </VBox>
    </top>
</BorderPane>
